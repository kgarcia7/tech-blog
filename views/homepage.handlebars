<div class="container">
  <div class="row">
    {{#each posts as |post|}}
      <div class="col-md-4 mb-4">
        <div class="card">
          <div class="card-header">
            <h5 class="card-title">{{post.title}}</h5>
          </div>
          <div class="card-body">
            <p class="card-text">{{post.content}}</p>
          </div>
          <div class="card-footer">
            <a href="/post/{{id}}" class="btn btn-primary">Read More</a>
          </div>
        </div>
      </div>
    {{/each}}
  </div>
</div>