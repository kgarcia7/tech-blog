<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <h2 class="card-header">Enter username and password to log in</h2>
        <div class="card-body">
          <form id="login-form">
            <div class="mb-3">
              <label for="username" class="form-label">Username</label>
              <input
                type="text"
                class="form-control"
                id="username-login"
                placeholder="Enter username"
              />
            </div>
            <div class="mb-3">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                class="form-control"
                id="password-login"
                placeholder="Enter password"
              />
              <div id="passwordHelp" class="form-text">Must be at least 6
                characters long.</div>
            </div>
            <div class="mb-3">
              <a href="/signup">Don't have an account? Signup here</a>
            </div>
            <button type="submit" class="btn btn-primary" id="login-btn">Log In</button>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>
<script src="js/login.js"></script>